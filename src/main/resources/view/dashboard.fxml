<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="520.0"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.dashboardController">

    <children>

        <!-- Dashboard Card -->
        <VBox alignment="CENTER"
              layoutX="60"
              layoutY="70"
              prefHeight="380"
              prefWidth="400"
              spacing="25"
              style="-fx-background-color: white;
                     -fx-background-radius: 20;
                     -fx-padding: 40;">

            <effect>
                <DropShadow radius="20" offsetY="5" color="#00000033"/>
            </effect>

            <!-- Title -->
            <Label text="Dashboard" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

            <!-- Welcome Message -->
            <Label fx:id="wellcome"
                   text="Welcome, User!"
                   textFill="#7f8c8d"
                   alignment="CENTER">
                <font>
                    <Font size="16"/>
                </font>
            </Label>

            <!-- Logout Button -->
            <Button fx:id="btnLogout"
                    text="Logout"
                    onAction="#btnLogoutOnAction"
                    prefHeight="45"
                    prefWidth="260"
                    style="-fx-background-color: linear-gradient(to right, #ff758c, #ff7eb3);
                           -fx-background-radius: 25;
                           -fx-text-fill: white;
                           -fx-font-size: 14;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;"/>

        </VBox>

    </children>
</AnchorPane>
