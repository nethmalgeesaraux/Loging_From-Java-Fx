<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="520.0" prefWidth="520.0" style="-fx-background-color: linear-gradient(to bottom right, #74ebd5, #ACB6E5);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CreateAccoutController">

    <children>

        <!-- Card -->
        <VBox alignment="CENTER" layoutX="60.0" layoutY="30.0" prefHeight="420" prefWidth="400" spacing="22" style="-fx-background-color: white;                      -fx-background-radius: 20;                      -fx-padding: 40;">

            <effect>
                <DropShadow color="#00000033" offsetY="5" radius="20" />
            </effect>

            <!-- Title -->
            <Text fill="#2c3e50" text="Create Account">
                <font>
                    <Font name="System Bold" size="26" />
                </font>
            </Text>

            <Label text="Fill the details below" textFill="#7f8c8d" />

            <!-- Form -->
            <VBox spacing="14">

                <TextField fx:id="txtFirstName" prefHeight="40" prefWidth="320" promptText="First Name" style="-fx-background-radius: 10;                                   -fx-border-radius: 10;                                   -fx-border-color: #dcdde1;                                   -fx-padding: 10;" />

                <TextField fx:id="txtLastName" prefHeight="40" prefWidth="320" promptText="Last Name" style="-fx-background-radius: 10;                                   -fx-border-radius: 10;                                   -fx-border-color: #dcdde1;                                   -fx-padding: 10;" />

                <TextField fx:id="txtEmail" prefHeight="40" prefWidth="320" promptText="Email Address" style="-fx-background-radius: 10;                                   -fx-border-radius: 10;                                   -fx-border-color: #dcdde1;                                   -fx-padding: 10;" />

                <PasswordField fx:id="txtPassword" prefHeight="40" prefWidth="320" promptText="Password" style="-fx-background-radius: 10;                                       -fx-border-radius: 10;                                       -fx-border-color: #dcdde1;                                       -fx-padding: 10;" />

                <!-- Create Button -->
                <Button fx:id="btnCreateAccount" onAction="#btnCreateAccountOnAction" prefHeight="45" prefWidth="320" style="-fx-background-color: linear-gradient(to right, #43e97b, #38f9d7);                                -fx-background-radius: 25;                                -fx-text-fill: white;                                -fx-font-weight: bold;                                -fx-cursor: hand;" text="Create Account" />

                <!-- Back Button -->
                <Button fx:id="btnback" onAction="#btnBackOnAction" prefHeight="42" prefWidth="320" style="-fx-background-color: transparent;                                -fx-border-color: #43e97b;                                -fx-border-radius: 25;                                -fx-text-fill: #43e97b;                                -fx-font-weight: bold;                                -fx-cursor: hand;" text="Back to Login" />

            </VBox>

        </VBox>

    </children>
</AnchorPane>
