<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CreateAccoutController">
    <children>
        <!-- Title -->
        <Label alignment="CENTER" layoutX="119.0" layoutY="29.0" prefHeight="30.0" prefWidth="334.0" text="Create Account">
            <font>
                <Font name="Bell MT Bold" size="22.0" />
            </font>
        </Label>

        <!-- First Name -->
        <TextField fx:id="txtFirstName" layoutX="180.0" layoutY="90.0" prefWidth="240.0" promptText="First Name"/>

        <!-- Last Name -->
        <TextField fx:id="txtLastName" layoutX="180.0" layoutY="130.0" prefWidth="240.0" promptText="Last Name"/>

        <!-- Email -->
        <TextField fx:id="txtEmail" layoutX="180.0" layoutY="170.0" prefWidth="240.0" promptText="Email"/>

        <!-- Password -->
        <PasswordField fx:id="txtPassword" layoutX="180.0" layoutY="210.0" prefWidth="240.0" promptText="Password"/>

        <!-- Back Button -->
        <Button fx:id="btnback" layoutX="194.0" layoutY="331.0" mnemonicParsing="false"
                onAction="#btnBackOnAction" prefHeight="37.0" prefWidth="211.0"
                style="-fx-background-color: #F08080;" text="Back" />

        <!-- Create Account Button -->
        <Button fx:id="btnCreateAccount" layoutX="194.0" layoutY="280.0" mnemonicParsing="false"
                onAction="#btnCreateAccountOnAction" prefHeight="37.0" prefWidth="211.0"
                style="-fx-background-color: #90EE90;" text="Create Account" />
    </children>
</AnchorPane>
